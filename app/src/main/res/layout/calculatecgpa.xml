<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity" android:background="@color/white">

    <include layout="@layout/app_bar" android:id="@+id/app_bar"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_below="@id/app_bar" android:id="@+id/svCGPAlayout"
                android:layout_marginBottom="40dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" android:padding="@dimen/margin">

            <!-- 100 level -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:id="@+id/ll100L"
                          android:layout_marginTop="@dimen/twenty">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:text="@string/level_100" android:layout_gravity="center" android:textSize="19sp"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal" android:weightSum="100"
                              android:id="@+id/ll100L1">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_weight="30" android:text="@string/first_semester"
                              android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_weight="70" android:id="@+id/et100L1"
                              android:inputType="numberDecimal" android:gravity="center"
                              android:maxLength="4"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal" android:weightSum="100"
                              android:id="@+id/ll100L2">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_weight="30" android:text="@string/second_semester"
                              android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_weight="70" android:id="@+id/et100L2"
                              android:inputType="numberDecimal" android:gravity="center"
                              android:maxLength="4"
                    />
                </LinearLayout>
            </LinearLayout>

